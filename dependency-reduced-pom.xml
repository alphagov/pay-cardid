      </exclusions>
    </dependency>
  </dependencies>
  <properties>
    <jmh.version>1.35</jmh.version>
    <dropwizard.version>2.1.2</dropwizard.version>
    <mockito.version>4.8.0</mockito.version>
    <jackson.version>2.13.4</jackson.version>
